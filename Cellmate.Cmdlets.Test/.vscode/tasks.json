{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pester",
            "type": "process",
            "command": "powershell.exe",
            "args": [
                "-File",
                "${workspaceFolder}\\TestAll.ps1",
                "-TargetModule",
                "${workspaceFolder}\\..\\Cellmate.Cmdlets\\bin\\Debug\\net47\\Cellmate.Cmdlets.dll"
            ],
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$pester"
        }
    ]
}